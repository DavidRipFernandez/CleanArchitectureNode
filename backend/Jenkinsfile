pipeline {
    agent any

    environment {
        NODE_HOME = 'C:\\Program Files\\nodejs'
        PATH = "${NODE_HOME};${env.PATH}"
        NSSM_PATH = 'C:\\nssm\\win64\\nssm.exe'
    }

    stages {


        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/DavidRipFernandez/CleanArchitectureNode.git'
            }
        }

        stage('Instalar dependencias') {
            steps {
                dir('backend') {
                    bat "npm install"
                }
            }
        }


        stage('Levantar backend en dev') {
            steps {
                parallel(
                    Dev: {
                        dir('backend') {
                            bat "\"${env.NSSM_PATH}\" start backend-dev"
                        }
                    },
                    Test: {
                        dir('backend') {
                            bat "\"${env.NSSM_PATH}\" start backend-test"
                        }
                    },
                    Staging: {
                        dir('backend') {
                            bat "\"${env.NSSM_PATH}\" start backend-staging"
                        }
                    }
                )
            }
        }

        stage('Verificar backend') {
            steps {
                powershell """
                curl -f http://localhost:3001/swagger
                curl -f http://localhost:3002/swagger
                curl -f http://localhost:3003/swagger
                """
            }
        }
    }
}
