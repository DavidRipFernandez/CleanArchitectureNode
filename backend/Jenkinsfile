pipeline {
    agent any

    environment {
        NODE_HOME = 'C:\\Program Files\\nodejs'
        PATH = "${NODE_HOME};${env.PATH}"
        PM2_HOME = "C:\\nvm4w\\nodejs\\.pm2"
    }

    stages {


        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/DavidRipFernandez/CleanArchitectureNode.git'
            }
        }

        stage('Instalar dependencias') {
            steps {
                dir('backend') {
                    bat "npm install -g pm2" 
                    bat "npm install"
                }
            }
        }

        stage('Detener procesos previos') {
            steps {
                script {
                    bat 'pm2 delete all || echo "No hay procesos previos"'
                    bat 'pm2 kill || echo "PM2 no estaba ejecut√°ndose"'
                }
            }
        }

        stage('Levantar backend paralelo') {
            steps {
                parallel(
                    Dev: {
                        dir('backend') {
                            bat 'pm2 start "npm run dev" --name backend-dev'
                        }
                    },
                    Test: {
                        dir('backend') {
                            bat 'pm2 start "npm run test" --name backend-test'
                        }
                    },
                    Staging: {
                        dir('backend') {
                            bat 'pm2 start "npm run staging" --name backend-staging'
                        }
                    }
                )
            }
        }

        stage('Verificar backend') {
            steps {
                parallel(
                    Dev: {
                        powershell """
                        do { Start-Sleep -Seconds 1 } until (Test-NetConnection -ComputerName localhost -Port 3001).TcpTestSucceeded
                        curl -f http://localhost:3001/swagger
                        """
                    },
                    Test: {
                        powershell """
                        do { Start-Sleep -Seconds 1 } until (Test-NetConnection -ComputerName localhost -Port 3002).TcpTestSucceeded
                        curl -f http://localhost:3002/swagger
                        """
                    },
                    Staging: {
                        powershell """
                        do { Start-Sleep -Seconds 1 } until (Test-NetConnection -ComputerName localhost -Port 3003).TcpTestSucceeded
                        curl -f http://localhost:3003/swagger
                        """
                    }
                )
            }
        }
    }
}
